nextflow_process {

    name "Test Process MODKIT_REPAIR"
    script "../main.nf"
    process "MODKIT_REPAIR"

    tag "modules"
    tag "modules_nfcore"
    tag "modkit"
    tag "modkit/repair"

    test("test - donor_bam - acceptor_bam") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file("https://github.com/nf-core/test-datasets/raw/refs/heads/methylong/test_data/test_modbam/ont_Col-0_tets_data_Chr1_5mb_7mb.bam", checkIfExists: true),
                    file("https://github.com/nf-core/test-datasets/raw/refs/heads/methylong/test_data/test_modbam/trimmed_ont_Col-0_tets_data_Chr1_5mb_7mb.bam", checkIfExists: true),
                ]

                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.bam.collect { tuple -> file(tuple[1]).name },
                    process.out.log.collect { tuple -> file(tuple[1]).name },
                    process.out.versions.collect { tuple -> file(tuple[1]).name }
                ).match() }
            )
        }

    }

    test("test - donor_bam - acceptor_bam - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file("https://github.com/nf-core/test-datasets/raw/refs/heads/methylong/test_data/test_modbam/ont_Col-0_tets_data_Chr1_5mb_7mb.bam", checkIfExists: true),
                    file("https://github.com/nf-core/test-datasets/raw/refs/heads/methylong/test_data/test_modbam/trimmed_ont_Col-0_tets_data_Chr1_5mb_7mb.bam", checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
